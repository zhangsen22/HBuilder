<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <include layout="@layout/title"/>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y150"
        android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码  :    "
        android:textSize="12sp"
        android:textColor="@color/color_666666"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_yqm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="dff7845 "
        android:textSize="14sp"
        android:textColor="@color/color_ff0000"
        android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/tv_zing_img"
        android:layout_width="@dimen/y324"
        android:layout_height="@dimen/y324"
        android:layout_marginTop="@dimen/y30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专属下载地址"
        android:textSize="12sp"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:layout_marginTop="@dimen/y40"/>

    <TextView
        android:id="@+id/tv_download_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WWW.uieyfeuiyweihf.com"
        android:textSize="12sp"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:layout_marginTop="@dimen/y30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/y20"
        android:layout_marginRight="@dimen/y20">

        <TextView
            android:id="@+id/tv_duplicate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="立即复制"
            android:textSize="12sp"
            android:textColor="@color/common_white"
            android:gravity="center"
            android:background="@mipmap/ay"
            android:textIsSelectable="true"/>

        <View
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:id="@+id/tv_save_zing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="保存二维码"
            android:textSize="12sp"
            android:textColor="@color/common_white"
            android:gravity="center"
            android:background="@mipmap/ay"/>

    </LinearLayout>

</LinearLayout>