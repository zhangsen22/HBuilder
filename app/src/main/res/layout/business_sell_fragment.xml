<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/title"/>

    <include layout="@layout/line_10_f9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/line_f9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y30"
                android:paddingRight="@dimen/y30"
                android:paddingTop="@dimen/y24"
                android:paddingBottom="@dimen/y36"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_business_sell_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="usdt特供商"
                    android:textSize="16sp"
                    android:textColor="@color/color_333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/y26"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量："
                        android:textSize="10sp"
                        android:textColor="@color/color_666666" />

                    <TextView
                        android:id="@+id/tv_business_sell_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="100.00-46548.820"
                        android:textSize="10sp"
                        android:textColor="@color/color_666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bco"
                        android:textSize="10sp"
                        android:textColor="@color/color_666666"
                        android:layout_marginLeft="@dimen/y4"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/y1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价"
                        android:textSize="10sp"
                        android:textColor="@color/color_666666" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限额："
                        android:textSize="10sp"
                        android:textColor="@color/color_666666" />

                    <TextView
                        android:id="@+id/tv_business_sell_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="100.00-46548.820"
                        android:textSize="10sp"
                        android:textColor="@color/color_666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cny"
                        android:textSize="10sp"
                        android:textColor="@color/color_666666"
                        android:layout_marginLeft="@dimen/y4"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/y1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rmb"
                        android:textSize="18sp"
                        android:textColor="@color/color_15be5b" />

                    <TextView
                        android:id="@+id/tv_business_sell_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6.84"
                        android:textSize="18sp"
                        android:textColor="@color/color_15be5b"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y30"
                android:paddingRight="@dimen/y30"
                android:paddingTop="@dimen/y28"
                android:paddingBottom="@dimen/y46"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您想售出多少？"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/y16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易限额"
                        android:textSize="10sp"
                        android:textColor="@color/color_526bfc" />

                    <TextView
                        android:id="@+id/tv_business_sell_more1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="100.00-46548.820"
                        android:textSize="10sp"
                        android:textColor="@color/color_526bfc"
                        android:layout_marginLeft="@dimen/y4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cny"
                        android:textSize="10sp"
                        android:textColor="@color/color_526bfc"
                        android:layout_marginLeft="@dimen/y4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/y30"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bco"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"/>

                        <EditText
                            android:id="@+id/et_business_sell_num"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:background="@color/transparent"
                            android:maxLines="1"
                            android:textColorHint="@color/color_999999"
                            android:textColor="@color/text"
                            android:textSize="10sp"
                            android:inputType="number|numberDecimal"
                            android:layout_marginLeft="@dimen/y18"
                            android:layout_marginRight="@dimen/y18"/>

                        <TextView
                            android:id="@+id/tv_num_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_526bfc"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/y36"
                        android:layout_height="@dimen/y30"
                        android:src="@mipmap/di"
                        android:layout_marginLeft="@dimen/y30"
                        android:layout_marginRight="@dimen/y30"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cny"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"/>

                        <EditText
                            android:id="@+id/et_business_sell_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:background="@color/transparent"
                            android:maxLines="1"
                            android:textColorHint="@color/color_999999"
                            android:textColor="@color/text"
                            android:textSize="10sp"
                            android:inputType="number|numberDecimal"
                            tools:hint="10.010-1897.890"
                            android:layout_marginLeft="@dimen/y18"
                            android:layout_marginRight="@dimen/y18"/>

                        <TextView
                            android:id="@+id/tv_price_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_526bfc"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y30"
                android:paddingTop="@dimen/y24"
                android:paddingBottom="@dimen/y24"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款方式"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y30"
                android:paddingRight="@dimen/y16"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/y26"
                    android:layout_height="@dimen/y26"
                    android:src="@mipmap/f" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/y16"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <ImageView
                    android:id="@+id/tv_add_idcards"
                    android:layout_width="@dimen/y36"
                    android:layout_height="@dimen/y36"
                    android:src="@mipmap/eh"/>

                <CheckBox
                    android:id="@+id/cb_idcast"
                    style="@style/CustomCheckboxTheme2"
                    android:layout_marginLeft="@dimen/y32"/>

            </LinearLayout>

    <include layout="@layout/line_f9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y30"
        android:paddingRight="@dimen/y16"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y26"
            android:layout_height="@dimen/y26"
            android:src="@mipmap/h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <ImageView
            android:id="@+id/tv_add_webchat"
            android:layout_width="@dimen/y36"
            android:layout_height="@dimen/y36"
            android:src="@mipmap/eh"/>

        <CheckBox
            android:id="@+id/cb_webchat"
            style="@style/CustomCheckboxTheme2"
            android:layout_marginLeft="@dimen/y32"/>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y30"
                android:paddingRight="@dimen/y16"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/y26"
                    android:layout_height="@dimen/y26"
                    android:src="@mipmap/g" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/y16"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <ImageView
                    android:id="@+id/tv_add_alipay"
                    android:layout_width="@dimen/y36"
                    android:layout_height="@dimen/y36"
                    android:src="@mipmap/eh"/>

                <CheckBox
                    android:id="@+id/cb_alipay"
                    style="@style/CustomCheckboxTheme2"
                    android:layout_marginLeft="@dimen/y32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y30"
                android:paddingRight="@dimen/y30"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资金密码"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_forget_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:maxLines="1"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_999999"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:hint="请输入资金密码"
                    android:layout_marginLeft="@dimen/y56"/>

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="忘记密码?"
                    android:textColor="@color/color_526bfc"
                    android:textSize="10sp"
                    android:gravity="center"/>

            </LinearLayout>

            <include layout="@layout/a2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·到账后请及时放币"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/y24"
                android:layout_marginLeft="@dimen/y30"/>

            <TextView
                android:id="@+id/tv_order"
                style="@style/buttonstyle2"
                android:text="下单"
                android:layout_marginTop="@dimen/y42"
                android:layout_marginBottom="@dimen/y54"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>