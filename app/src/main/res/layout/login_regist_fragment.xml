<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_login_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/y144"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/y150"
                android:layout_height="@dimen/y150"
                android:src="@mipmap/cu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/common_white"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/y60"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_login_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y510"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/guadan_magicindicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/y150"
            android:layout_marginRight="@dimen/y150"/>

    <hbuilder.android.com.ui.widget.NoScrollViewPager
        android:id="@+id/guadan_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>