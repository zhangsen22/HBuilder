<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f9f9f9">

    <include layout="@layout/title"/>

    <LinearLayout
        android:id="@+id/ll_alipay_click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y40"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/common_white">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/g"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y30"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_marginRight="@dimen/y20"/>

        <ImageView
            android:layout_width="@dimen/y12"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/y"/>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

    <LinearLayout
        android:id="@+id/ll_ylcard_click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y40"
        android:gravity="center_vertical"
        android:background="@color/common_white">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y30"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ylcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_marginRight="@dimen/y20"/>

        <ImageView
            android:layout_width="@dimen/y12"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/y"/>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

    <LinearLayout
        android:id="@+id/ll_webchat_click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y40"
        android:gravity="center_vertical"
        android:background="@color/common_white">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/h"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y30"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_webchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="未绑定"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_marginRight="@dimen/y20"/>

        <ImageView
            android:layout_width="@dimen/y12"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/y"/>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y48">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"
            android:background="@mipmap/l"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y18"
            android:layout_marginRight="@dimen/y18"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"
            android:background="@mipmap/l"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y38"
        android:paddingRight="@dimen/y38"
        android:layout_marginTop="@dimen/y30"
        android:textSize="10sp"
        android:textColor="@color/color_666666"
        android:lineSpacingExtra="@dimen/y10"
        android:text="·支付宝、银行卡、微信支付，至少设置一种交易方式，才能进行 法币交易\n·为确保正常收款，规避风险，默认收款限额50,000，支付宝收\n款笔数限制20笔，银行卡可进行当日收款额度设置，当日收款额\n度或次数超出限制时，继续使用会导致收款失败几率增加。"/>

</LinearLayout>