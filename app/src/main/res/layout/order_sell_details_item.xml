<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:paddingBottom="@dimen/y24"
        android:background="@color/common_white">

        <ImageView
            android:id="@+id/tv_order_sell_shuoming"
            android:layout_width="@dimen/y42"
            android:layout_height="@dimen/y42"
            tools:background="@mipmap/cx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/y20"
            android:layout_marginTop="@dimen/y4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bco"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNY"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_order_sell_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="等待对方付款"
            android:textSize="10sp"
            android:textColor="@color/color_506ee6"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y18"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:id="@+id/tv_order_sell_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2019-04-03 17:02:01"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:gravity="center" />

    </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/y20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格："
                            android:textColor="@color/color_666666"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_order_sell_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6.87"
                            android:textColor="@color/color_666666"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNY"
                            android:textColor="@color/color_666666"
                            android:textSize="10sp"/>

                    </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="@dimen/y20">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="总额："
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"/>

                       <TextView
                           android:id="@+id/tv_order_sell_amount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           tools:text="6.87"
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="CNY"
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="@dimen/y20">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="数量："
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"/>

                       <TextView
                           android:id="@+id/tv_order_sell_paycode"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           tools:text="6.87"
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/bco"
                           android:textColor="@color/color_666666"
                           android:textSize="10sp"
                           android:layout_marginLeft="@dimen/y6"/>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="bottom">

                   <TextView
                       android:id="@+id/tv_order_sell_djs"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="14:38后取消订单"
                       android:textColor="@color/color_666666"
                       android:textSize="10sp"
                       android:gravity="center"
                       android:visibility="gone"/>

                   <LinearLayout
                       android:id="@+id/ll_order_sell_button"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_gravity="bottom"
                       android:visibility="gone" >

                       <TextView
                           android:id="@+id/tv_order_sell_sstime"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           tools:text="14:09：15后可申诉"
                           android:textColor="@color/color_999999"
                           android:textSize="10sp"
                           android:gravity="center"
                           android:visibility="gone"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="@dimen/y10">

                           <TextView
                               android:id="@+id/tv_order_sell_ss"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:textColor="#15BD5B"
                               android:textSize="10sp"
                               android:gravity="center"
                               android:paddingTop="@dimen/y10"
                               android:paddingBottom="@dimen/y10"
                               android:background="@drawable/lv_button_bg"
                               android:text="申诉" />

                           <TextView
                               android:id="@+id/tv_order_sell_qfb"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:textColor="#15BD5B"
                               android:textSize="10sp"
                               android:paddingTop="@dimen/y10"
                               android:paddingBottom="@dimen/y10"
                               android:gravity="center"
                               android:background="@drawable/lv_button_bg"
                               android:layout_marginLeft="@dimen/y10"
                               android:text="去放币" />

                       </LinearLayout>

                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

</LinearLayout>