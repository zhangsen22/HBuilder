        android:gravity="center_vertical"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/y30">

        <ImageView
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/bx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text26"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y28"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL1"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y10"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_shenfencard_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="未认证"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_marginRight="@dimen/y32"/>

