<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/y80"
        android:paddingRight="@dimen/y80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:hint="请输入手机号"
                android:layout_marginLeft="@dimen/y28"/>

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="验证码"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_image_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="text"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:hint="请输入图形验证码"
                android:layout_marginLeft="@dimen/y28"/>

            <ImageView
                android:id="@+id/iv_image_code"
                android:layout_width="@dimen/y120"
                android:layout_height="@dimen/y44"
                android:src="@mipmap/misc"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="短信验证码"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_sms_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="text"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:hint="请输入短信验证码"
                android:layout_marginLeft="@dimen/y28"/>

            <TextView
                android:id="@+id/tv_getsms_code"
                android:layout_width="@dimen/y120"
                android:layout_height="@dimen/y44"
                android:gravity="center"
                android:text="发送验证码"
                android:background="@drawable/a6"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="密码"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="textPassword"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:hint="请输入密码"
                android:layout_marginLeft="@dimen/y28"/>

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="邀请码"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_yaoqing_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="text"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:hint="请输入邀请码"
                android:layout_marginLeft="@dimen/y28" />

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y32"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_agree"
                style="@style/CustomCheckboxTheme2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我已阅读并同意"
                android:textSize="10sp"
                android:textColor="@color/text"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_yonghuxieyi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="《用户协议》"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/color_4f69df"
                android:layout_marginLeft="@dimen/y10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_regist"
            android:text="注册"
            style="@style/buttonstyle"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginBottom="@dimen/y122"/>

    </LinearLayout>

    </ScrollView>
