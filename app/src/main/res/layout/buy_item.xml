<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/y8"
    android:paddingRight="@dimen/y30"
    android:paddingBottom="@dimen/y14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y10"
            android:layout_height="@dimen/y40"
            android:src="@mipmap/d"/>

        <FrameLayout
            android:layout_width="@dimen/y52"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/y20">

        <TextView
            android:id="@+id/tv_name_first"
            android:layout_width="@dimen/y44"
            android:layout_height="@dimen/y44"
            tools:text="S"
            android:gravity="center"
            android:background="@mipmap/b"
            android:textColor="@color/common_white"
            android:textSize="14sp" />

            <ImageView
                android:layout_width="@dimen/y18"
                android:layout_height="@dimen/y18"
                android:src="@mipmap/c"
                android:layout_gravity="bottom|right"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sppenn"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y10"/>

        <ImageView
            android:id="@+id/iv_api_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/st"
            android:layout_marginLeft="@dimen/y14"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:id="@+id/tv_tradetimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1251"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

        <View
            android:layout_width="@dimen/y2"
            android:layout_height="@dimen/y22"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:background="@color/gray_text"/>

        <TextView
            android:id="@+id/tv_tradesuccrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="98%"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y16"
        android:layout_marginLeft="@dimen/y30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="310.882845"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y10"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inf"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y10"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y14"
        android:layout_marginLeft="@dimen/y30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限额"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥500.00"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y10"/>

        <TextView
            android:id="@+id/tv_max_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥2,123.00"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/y10"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:id="@+id/tv_single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥6.83"
            android:gravity="center"
            android:textColor="@color/color_4e6bcf"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y14"
        android:layout_marginLeft="@dimen/y30">

        <ImageView
            android:id="@+id/iv_idcard"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/f"
            android:layout_marginRight="@dimen/y18"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_ailpay"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/g"
            android:layout_marginRight="@dimen/y18"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_webpay"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/h"
            android:visibility="gone"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="@dimen/y150"
            android:layout_height="@dimen/y50"
            android:background="@mipmap/i"
            android:layout_marginLeft="@dimen/y18"
            android:text="购买"
            android:textSize="12sp"
            android:textColor="@color/common_white"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>

    <include layout="@layout/line_f9"/>

</LinearLayout>