<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--如果MagicIndicator需要加背景颜色   需要在其外面嵌套一个父布局  在父布局添加背景颜色-->
    <LinearLayout
        android:id="@+id/ff_order_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_order_finish"
            android:layout_width="@dimen/y92"
            android:layout_height="@dimen/y92"
            android:src="@mipmap/ef"
            android:padding="@dimen/y30"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/order_magicindicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/y92"
            android:layout_height="@dimen/y92"
            android:src="@mipmap/ef"
            android:padding="@dimen/y30"
            android:visibility="invisible"/>

    </LinearLayout>

    <include layout="@layout/line_20_f9"/>

    <ccash.android.com.ui.widget.NoScrollViewPager
        android:id="@+id/order_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>