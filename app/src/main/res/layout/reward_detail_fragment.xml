<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y40"
        android:paddingTop="@dimen/y22"
        android:paddingBottom="@dimen/y14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近日奖励："
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_last_jiangliusdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24894.645"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usdt"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累积奖励"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_all_jiangliusdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24894.645"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usdt"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y40"
        android:paddingTop="@dimen/y14"
        android:paddingBottom="@dimen/y22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近日奖励："
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_last_jiangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24894.645"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bco"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累积奖励"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_all_jiangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24894.645"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bco"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="奖励明细"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/y40"
        android:textSize="12sp" />

        <com.handmark.pulltorefresh.library.PullToRefreshRecyclerView
            android:id="@+id/reward_detailspull_refresh_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/common_white"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:layout_marginTop="@dimen/y20"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            ptr:ptrMode="pullFromStart"
            ptr:ptrOverScroll="false"/>

</LinearLayout>