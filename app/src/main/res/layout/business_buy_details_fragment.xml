<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_f9f9f9">

    <include layout="@layout/title"/>

    <include layout="@layout/line_f9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingTop="@dimen/y18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待支付"
                    android:textColor="@color/color_ff0000"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余时间："
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/y20"/>

                <TextView
                    android:id="@+id/tv_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14.59"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BCO将在托管中保存"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/color_15bd5b"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟，逾期未付款交易将自动取消。"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:gravity="center"/>

            </LinearLayout>

            <include layout="@layout/line_f9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/common_white"
                android:paddingTop="@dimen/y20"
                android:paddingBottom="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="798456498789465"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/y10"/>

                <ImageView
                    android:id="@+id/iv_copy_ordercode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bh"
                    android:layout_marginLeft="@dimen/y10"/>

            </LinearLayout>

            <include layout="@layout/line_f9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:paddingTop="@dimen/y40"
                android:paddingBottom="@dimen/y10"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款人姓名"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_shoukuai_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="郭金凤"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款方式"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_shoukuai_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="支付宝"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_popview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bg"
                    android:layout_marginLeft="@dimen/y16"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_shoukuai_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="155586222"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bh"
                    android:layout_marginLeft="@dimen/y12"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款参考码"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_shoukuai_cankaoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="98171"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <include layout="@layout/line_f9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10"
                android:background="@color/common_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付总金额"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100.00"
                    android:textColor="@color/color_15bd5b"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cny"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/y10"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易提醒"
                android:textColor="@color/color_666666"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/y26"
                android:layout_marginTop="@dimen/y28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·付款后，请务必点击“我已付款”，避免资金损失。\n·付款转账，请务必填写上方参考码。\n·日取消3笔以上交易，账户将被冻结。"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:lineSpacingExtra="@dimen/y6"
                android:layout_marginTop="@dimen/y8"
                android:layout_marginLeft="@dimen/y26"/>

            <TextView
                android:id="@+id/tv_re_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@drawable/a3"
                android:layout_gravity="center_horizontal"
                android:text="我已付款"
                android:gravity="center"
                android:layout_marginLeft="@dimen/y54"
                android:layout_marginRight="@dimen/y54"
                android:textColor="@color/common_white"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/y78"/>


                <TextView
                    android:id="@+id/tv_cancel_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/a4"
                    android:layout_gravity="center_horizontal"
                    android:text="取消订单"
                    android:gravity="center"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/y54"
                    android:layout_marginRight="@dimen/y54"
                    android:layout_marginTop="@dimen/y32"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>